#git workflow
 
#		working dir	           staging area		           local repo	                       	remote repo
#		
#		    |         git add            |                              |                                    |
#		    ----------------------------->
#							    git commit
#						  ------------------------------>                git push
#						  				 ------------------------------------>
#						  				 
#						  				                 git fetch
#						  				 <-------------------------------------
#						  
#						  git merge
#	          <---------------------------------------------------------------
#	          
#	                                          git checkout
#	          <---------------------------------------------------------------				 
#		                                                   git pull
#		<---------------------------------------------------------------------------------------------------------
#		
#				
			
	

#git  global config username
$git config --global user.name "Aswath-RA"      

#git global config mail
$git config --global user.email "aswathra@gmail.com" 


#If you have many project with different name then use local 
#git  local config username
$git config user.name "Aswath-RA"      

#git local config mail
$git config  user.email "aswathra@gmail.com" 




